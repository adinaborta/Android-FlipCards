<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDeckContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardDeckConstraintContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_pink">

        <ImageView
            android:id="@+id/cardDeckImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/butterfly"
            />

        <TextView
            android:id="@+id/cardDeckTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut tellus dui, ultrices in laoreet sit amet, suscipit quis sem. Praesent in tincidunt mi. Mauris in auctor dui, sed euismod nunc."
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cardDeckImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>